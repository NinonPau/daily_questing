<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- go back to home page button -->
      <div class="mb-3">
        <%= link_to "Back", root_path, class: "btn btn-secondary" %>
      </div>

      <h1 class="text-center mb-4">Add Special Quest</h1>

      <%= form_with model: @task, local: true do |f| %>

        <!-- errors in red background -->
        <% if @task.errors.any? %>
          <div class="alert alert-danger">
            <h5><%= pluralize(@task.errors.count, "error") %> prevented this quest from being saved:</h5>
            <ul>
              <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- name input -->
        <div class="mb-4 border p-3 rounded">
          <h5>1. Name of the Quest</h5>
          <%= f.label :name, nil, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your quest name" %>
        </div>

        <!-- description + daily checkbox -->
        <div class="mb-4 border p-3 rounded">
          <h5>2. Describe Your Quest</h5>
          <%= f.label :description, nil, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", placeholder: "Tell the tale of your quest" %>

          <div class="form-check mt-2">
            <%= f.check_box :daily, class: "form-check-input" %>
            <%= f.label :daily, "Daily Quest", class: "form-check-label" %>
          </div>
        </div>

        <!-- XP dropdown -->
        <div class="mb-4 border p-3 rounded">
          <h5>3. How Epic is Your Quest?</h5>
          <%= f.label :xp, nil, class: "form-label" %>
          <%= f.select :xp, options_for_select([
            ["Stroll -- +10 XP", 10],
            ["Expedition -- +50 XP", 50],
            ["Ultimate Trial -- +100 XP", 100]
          ]), { prompt: "Select your Challenge" }, class: "form-select" %>
        </div>

        <!-- submit button -->
        <div class="mb-4 text-center">
          <%= f.submit "Add the Quest to your Journey", class: "btn btn-primary" %>
        </div>

      <% end %>

      <!-- Popup message congrat -->
      <% if notice.present? %>
        <div class="modal fade show" style="display: block;" tabindex="-1">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4 shadow rounded">
              <h5 class="mb-3">Quest Successfully Created!</h5>
              <p>Your quest has been added to your journey.</p>
              <div class="d-flex justify-content-center gap-2 mt-3">
                <%= link_to "Home Page", root_path, class: "btn btn-secondary" %>
                <%= link_to "View All Quests", tasks_path, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>

        <!-- backdrop -->
        <div class="modal-backdrop fade show"></div>
      <% end %>

    </div>
  </div>
</div>
