<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= render "shared/taskform", h1: "Add a quest", submit: "Create" %>

      <!-- Random section -->
      <div class="mb-2 p-2">
        <h3 id="new-quest-h3">Feeling lucky?</h3>
        <p id="new-quest-p">Add a random quest instead!</p>
        <div class="buttons d-flex justify-content-center align-items-center">
          <%= simple_form_for :task, url: random_tasks_path do |f| %>
            <%= f.submit 'Random', class: "btn btn-primary p-3" %>
          <% end %>
        </div>
      </div>

      <!-- Popup message congrat -->
      <% if notice.present? %>
        <%= render "shared/rpg_popup",
              title: "Quest Successfully Edited!",
              message: "Your quest changes have been saved.",
              redirect_path: tasks_path %>

        <!-- backdrop (only if popup is shown) -->
        <div class="modal-backdrop fade show"></div>
      <% end %>

    </div>
  </div>
</div>
