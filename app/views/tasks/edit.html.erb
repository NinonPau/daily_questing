<div id="new-quest-container">
  <h1 id="new-quest-h1">Edit Quest</h1>

  <%= render "shared/taskform", h1: "Edit quest", submit: "Save changes" %>

  <% if notice.present? %>
    <%= render "shared/rpg_popup",
          title: "Quest Successfully Edited!",
          message: "Your quest changes have been saved.",
          redirect_path: tasks_path %>
  <% end %>
</div>
