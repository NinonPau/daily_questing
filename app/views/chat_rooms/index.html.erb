<div class="chat-room-page">

  <!-- Banner / Page Header -->
  <header class="page-header banner">
    <h1 class="page-title chat-font pt-4">The Hearth</h1>
    <p class="subtitle">Gather â€˜round the fire and share your tales!</p>
  </header>

  <div class="chat-content">

    <!-- Create Chat Room Panel -->
    <section class="create-chat-panel panel">
      <%= form_with model: ChatRoom.new, url: chat_rooms_path, local: true, html: { class: "chat-form" } do |f| %>
        <div class="form-group">
          <%= f.label :name, "Weave your story", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name your tale..." %>
        </div>
        <div class="submit-container">
          <%= f.submit "Light the Fire", class: "btn" %>
        </div>
      <% end %>
    </section>

    <!-- Chat Rooms List Panel -->
    <section class="chat-rooms-panel panel">
      <h2 class="panel-title">Adventurers at the Hearth</h2>
      <ul class="chat-room-list">
        <% @chat_rooms.each do |chat_room| %>
          <li class="chat-room-item">
            <div>
              <%= link_to chat_room.name, chat_room_path(chat_room), class: "chat-room-link" %>
            </div>
            <% if chat_room.creator == current_user %>
              <%= button_to "Douse the Flame", chat_room_path(chat_room), method: :delete, class: "btn danger-btn small-btn" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </section>

  </div>

  <!-- Return Button -->
  <div class="return-map-container">
    <%= link_to "Return to World Map", root_path, class: "btn return-btn" %>
  </div>

</div>
