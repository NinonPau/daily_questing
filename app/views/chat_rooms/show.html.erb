<h1><%= @chat_room.name %></h1>

<div class="chat-box">
  <% @messages.each do |message| %>
    <p>
      <strong><%= message.sender.username %>:</strong> <%= message.content %>
      <em>(<%= time_ago_in_words(message.created_at) %> ago)</em>
    </p>
  <% end %>
</div>

<%= form_with model: @new_message, url: create_message_chat_room_path(@chat_room), local: true do |f| %>
  <%= f.text_area :content, placeholder: "Type your message..." %>
  <%= f.submit "Send", class: "btn btn-primary mt-2" %>
<% end %>

<%= link_to "Back to Chat Rooms", chat_rooms_path, class: "btn btn-secondary mt-3" %>
<%= link_to "Back to Home", root_path, class: "btn btn-secondary mt-3" %>
