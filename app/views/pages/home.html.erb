<% if user_signed_in? %>
  <!-- Dashboard Actions -->
  <div class="d-flex justify-content-center flex-wrap gap-3 my-4">

    <%= link_to new_task_path, class: "btn hologram hologram-cyan" do %>
      <span data-text="Add Special Quest">Add Special Quest</span>
      <div class="scan-line"></div>
    <% end %>

    <%= link_to tasks_path, class: "btn hologram hologram-cyan" do %>
      <span data-text="View Quests">View Quests</span>
      <div class="scan-line"></div>
    <% end %>

    <% if current_user.user_mood %>
      <%= link_to edit_user_mood_path(current_user.user_mood), class: "btn hologram hologram-cyan" do %>
        <span data-text="Update Mood">Update Mood</span>
        <div class="scan-line"></div>
      <% end %>
    <% else %>
      <%= link_to new_user_mood_path, class: "btn hologram hologram-cyan" do %>
        <span data-text="Log Mood">Log Mood</span>
        <div class="scan-line"></div>
      <% end %>
    <% end %>

    <%= simple_form_for :task, url: random_tasks_path do |f| %>
      <%= f.button :submit, class: "btn hologram hologram-cyan" do %>
        <span data-text="Random Quest">Random Quest</span>
        <div class="scan-line"></div>
      <% end %>
    <% if current_user.user_mood %>
      <%= link_to raw('<i class="fa-solid fa-cloud-sun home-btn-icon"></i> Update Mood'), edit_user_mood_path(current_user.user_mood), class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;"  %>
    <% else %>
      <%= link_to "Log Mood", new_user_mood_path, class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;"  %>
    <% end %>
    <%= link_to raw('<i class="fa-solid fa-scroll home-btn-icon"></i> View Quests'), tasks_path, class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;" %>
    <%= link_to raw('<i class="fa-solid fa-feather home-btn-icon"></i> Add A Quest'), new_task_path, class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;" %>
    <%#= simple_form_for :task, url: random_tasks_path do |f| %>
      <%#= f.submit 'Add Random Quest', class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; width: 100%;" %>
    <%# end %> <!-- Ask teacher about icon in submit, knowing that raw() is being escaped -->

    <%= link_to friendships_path, class: "btn hologram hologram-cyan" do %>
      <span data-text="Manage Friends">Manage Friends</span>
      <div class="scan-line"></div>
    <% end %>

    <%= link_to chat_rooms_path, class: "btn hologram hologram-cyan" do %>
      <span data-text="Chat Rooms">Chat Rooms</span>
      <div class="scan-line"></div>
    <% end %>

  </div>
    <!-- New Friendship Button -->
    <%= link_to raw('<i class="fa-solid fa-handshake-angle home-btn-icon"></i> Find Questers'), friendships_path, class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;" %>

    <!-- new button Chat -->
    <%= link_to raw('<i class="fa-solid fa-fire home-btn-icon"></i> Go to Hearth'), chat_rooms_path, class: "btn home-btn btn-lg shadow-sm", style: "border-radius: 15px; min-width: 180px;" %>
  </div>


<% else %>
  <%= render "public_home" %>
<% end %>
