<% if flash[:notice].present? || flash[:alert].present? %>
  <% if flash[:notice].present? %>
    <% type = :notice %>
    <% message = flash[:notice] %>
  <% else %>
    <% type = :alert %>
    <% message = flash[:alert] %>
  <% end %>

  <div id="rpg-popup-backdrop"></div>
  <div class="<%= type == :notice ? 'rpg-popup' : 'rpg-popup alert-popup' %> auto-hide">
    <h5 class="rpg-popup-title">
      <%= type == :notice ? "Success!" : "Oops!" %>
    </h5>
    <p class="rpg-popup-text"><%= message %></p>
  </div>
<% end %>
