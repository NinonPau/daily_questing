<%= form_with model: @task, local: true do |f| %>

  <!-- errors in red background -->
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@task.errors.count, "error") %> prevented this quest from being saved:</h5>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- name input -->
  <div class="mb-2 p-2 rounded">
    <!-- <h5>1. Name of the Quest</h5> -->
     <%= f.label :name, nil, class: "task-form-label" %>
    <%= f.text_field :name, class: "task-form-control", placeholder: "Announce the quest's name" %>
  </div>

  <!-- description + daily checkbox -->
  <div class="mb-2 p-2 rounded">
    <!-- <h5>2. Describe Your Quest</h5> -->
    <%= f.label :description, nil, class: "task-form-label" %>
    <%= f.text_area :description, class: "task-form-control", placeholder: "Tell the tale of your quest" %>

    <div class="task-form-check">
      <%= f.check_box :daily, class: "task-form-check-input" %>
      <%= f.label :daily, "Daily Quest", class: "task-form-check-label" %>
    </div>
  </div>

  <!-- XP dropdown -->
  <div class="mb-2 p-2 pb-3 rounded">
    <!-- <h5>3. How Epic is Your Quest?</h5> -->
    <%= f.label :xp, nil, class: "task-form-label" %>
    <%= f.select :xp, options_for_select([
      ["Stroll -- +10 XP", 10],
      ["Expedition -- +50 XP", 50],
      ["Ultimate Trial -- +100 XP", 100]
    ]), { prompt: "How epic is your quest?" }, class: "task-form-select" %>
  </div>

  <!-- submit & back button -->
  <div class="buttons d-flex justify-content-center align-items-center gap-4">

    <!-- Go Back Button with flip -->
    <%= link_to tasks_path, class: "btn btn-flip" do %>
      <span>Go back</span>
      <span>Go back</span>
      <span>Go back</span>
      <span>Go back</span>
    <% end %>

    <!-- Submit Button with flip -->
    <%= f.button :submit, class: "btn btn-flip" do %>
      <span><%= submit %></span>
      <span><%= submit %></span>
      <span><%= submit %></span>
      <span><%= submit %></span>
    <% end %>

  </div>

<% end %>
