      <%= f.hidden_field :mood_type, value: "Ok'ish", class: "mood-card-hidden" %>
      <%= f.submit "Select", class: "btn btn-warning" %>
    <% end %>
    </div>
    <div class="mood-icon"><i class="fa-solid fa-smog fa-3x"></i></div>
  </div>

  <div class="mood-card">
    <div class="mood-content-box">
      <div class="Mood-content-text">Bad</div>
      <div class="Mood-content-xpbonus">XP * 3,00</div>
