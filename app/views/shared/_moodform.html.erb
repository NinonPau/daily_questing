    <% end %>
    </div>
    <div class="mood-icon"><i class="fa-solid fa-cloud-bolt fa-3x"></i></div>
  </div>

</div>





<div class="mb-3 back-link">
  <%= link_to "Back", root_path, class: "btn btn-secondary" %>
</div>
