<header class="text-center my-4">

  <div class="heroheader-box">

    <div class="heroheader-user-row">
      <div class="heroheader-username"><%= current_user.username %></div>
      <div class="heroheader-level-and-icon">
        <div class="heroheader-level"> Level:<%= current_user.current_level || 0 %></div>
        <div class="level-icon">
          <% if current_user.current_level == 1 %>
          <i class="fa-solid fa-ghost fa-3x"></i>
          <% elsif current_user.current_level == 2 %>
          <i class="fa-solid fa-hat-wizard fa-3x"></i>
          <% elsif current_user.current_level == 3 %>
          <i class="fa-solid fa-crown fa-3x"></i>
          <% elsif current_user.current_level == 4 %>
          <i class="fa-solid fa-dragon fa-3x"></i>
          <% elsif current_user.current_level == 5 %>
          <i class="fa-brands fa-d-and-d fa-3x"></i>
          <% elsif current_user.current_level == 6 %>
          <i class="fa-thin fa-skull-crossbones fa-3x"></i>
          <% elsif current_user.current_level == 7 %>
          <i class="fa-solid fa-skull-crossbones fa-3x"></i>
          <% elsif current_user.current_level == 8 %>
          <i class="fa-solid fa-dragon fa-3x"></i>
          <% elsif current_user.current_level == 9 %>
          <i class="fa-solid fa-dragon fa-3x"></i>
          <% elsif current_user.current_level == 10 %>
          <i class="fa-solid fa-dragon fa-3x"></i>
          <% end %>
        </div>
      </div>
    </div>

    <div class="xp-bar-container">
      <div class="xp-fill" style="width: <%= current_user.xp_progress_percent[:percent] %>%;">
      </div>
    </div>

    <div class="heroheader-exp-row">
      <div class="heroheader-exp">XP:<%= current_user.total_xp.round(0) || 0 %></div>
      <div class="exp-remain">
       Remaining:<%= current_user.xp_progress_percent[:remaining] %>
      </div>
    </div>

    <div class="heroheader-mood">
      <div class="heroheader-mood-type">
        Mood: <%= current_user.user_mood.mood_type %>
      </div>
      <div class="heroheader-mood-bonus">
        Bonus: <%= current_user.user_mood.xp_bonus %>
      </div>
    </div>

  </div>
</header>
